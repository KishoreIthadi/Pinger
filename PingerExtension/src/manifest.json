{
  "manifest_version": 2,

  "name": "PingER",

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "description": " Pinger is a simple but elegant chrome browser extension to monitor the status of a remote server, website or a remoteDB from your chrome browser.",

  "version": "0.0.0.1",

  "icons": {
    "16": "images/pingerX16.png",
    "48": "images/pingerX32.png",
    "128": "images/pingerX48.png",
    "128": "images/pingerX128.png"
  },
  
  "browser_action": {
    "default_icon": "images/pingerX32.png",
    "default_popup": "pinger.html"
  },

  "background": {
    "scripts": [
      "scripts/lib/ga.js",
      "scripts/lib/jquery.min.js",
      "scripts/config.js",
      "scripts/analyticsutility.js",
      "scripts/helperutility.js",
      "scripts/notificationutility.js",
      "scripts/localstorageutility.js",
      "scripts/settingsutility.js",
      "scripts/validationutility.js",
      "scripts/APIutility.js",
      "scripts/UIutility.js",
      "scripts/backgroundutility.js"
    ]
  },

  "permissions": [
    "background",
    "notifications",
    "storage",
    "http://*/*",
    "https://*/*"
  ]
}